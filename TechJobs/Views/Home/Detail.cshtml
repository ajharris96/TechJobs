@model TechJobs.ViewModels.JobDetailViewModel

<h1>@Model.Name</h1>

<table class="table">
    <tr>
        <th>Employer</th>
        <td><a href="@Model.EmployerUrl">@Model.EmployerName</a></td>
    </tr>
    <tr>
        <th>Skills</th>
        <td>@Model.SkillText</td>
    </tr>

</table>

@if (User.IsInRole("manager")) { 
<a asp-controller="Skill" asp-action="AddJob" asp-route-id="@Model.JobId">Add additional skills</a>
}